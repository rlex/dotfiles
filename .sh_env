## Options ##
# 1 for true, any other for false
export ext_functions="1"        # source ~/.rc/.sh_functions
export ext_alias="1"            # source ~/.rc/.sh_aliases
export ext_toast="1"            # add toast environment variables

#### paths
# main path
export PATH=~/bin:$PATH:/usr/local/sbin:/sbin:/usr/local/bin:/usr/local/sbin:/usr/libexec:/opt/local/bin:/opt/local/sbin:/usr/local/mysql/bin:~/.rc/.bin
# ruby 1.8 in /opt
# export PATH=/opt/ruby1.8/bin:$PATH
# rubygems in $HOME
export PATH=$PATH:~/.gem/ruby/1.8/bin:~/.gem/ruby/1.9.1/bin
# manpages in strange locations
export MANPATH=$MANPATH:/usr/local/man:/opt/local/share/man

#### user variables
export EDITOR="vim"
export VISUAL="vim"
export PAGER="less"
export GREP_OPTIONS='--color=auto'
export GREP_COLOR='1;32'
export LESSCHARSET=UTF-8

#### 'less' colors for colored manpages
export LESS_TERMCAP_mb=$'\E[01;31m'
export LESS_TERMCAP_md=$'\E[01;31m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;32m'

### //TODO konsole fix
if [ $TERM = xterm -o $TERM = rxvt-256color ]; then
    export TERM=xterm-256color
fi
### source external files
# check for toast, if yes, env it
if [ "$ext_toast" = "1" ];
    then
        if [ -f $HOME/.toast/armed/bin/toast ];
        then
            eval `$HOME/.toast/armed/bin/toast env`
        fi
fi

# check for sh functions file
if [ "$ext_functions" = "1" ];
    then
        if [ -f $HOME/.rc/.sh_functions ];
        then
            source $HOME/.rc/.sh_functions
        fi
fi

# check for sh aliases file
if [ "$ext_toast" = "1" ];
    then
        if [ -f $HOME/.rc/.sh_aliases ];
        then
            source $HOME/.rc/.sh_aliases
        fi
fi

# all done? Show MOTD!
if [ -f $HOME/.rc/.sh_motd ];
then
    source $HOME/.rc/.sh_motd
fi

