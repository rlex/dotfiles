#!/bin/bash
# dotfiles, for example .bashrc, .bash_profile... 
dotfiles=( screenrc vimrc zshrc bashrc bash_profile gemrc htoprc gitconfig hgrc biewrc dircolors ackrc muttrc my.cnf toprc Xdefaults gvimrc nanorc )
# dotdirs, for example .vim, .mc...
dotdirs=( mc vim mutt )
# dirs inside ~/.config
dotconf=( fish awesome )
# dotfiles deployment
for file in ${dotfiles[@]}
do
        ln -sfv ~/.rc/.$(basename $file) ~/.$file
done

# dotdirs deployment
for dir in ${dotdirs[@]}
do
        ln -sfv ~/.rc/.$dir/ -t $HOME
done

# awesome deployment
confdir() {
for dir in ${dotconf[@]}
do
    ln -sfv ~/.rc/.$dir/ -t $HOME/.config
done
}

if [ -f $HOME/.config ];
then
    confdir
else
    mkdir ~/.config
    confdir
fi

cd - >&/dev/null
