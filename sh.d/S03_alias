#file for short aliases
#very ugly hack to allow bypassing aliases via sudo.
alias sudo='A=`alias` sudo  '
alias j="jobs"
if ls -F --color=auto >&/dev/null; then
  alias ls="ls --color=auto -F"
else
  alias ls="ls -F"
fi
alias l.="ls -d .*"
alias ll="ls -lh"
alias la="ls -alh"
alias lr="ls -lR"
alias less="less -FRX"
alias cd..="cd .."
alias ..="cd .."
alias ...="cd ../.."
alias pg="ps aux | grep"
alias tcpdump="tcpdump -ttttnnn"
alias b="cd $OLDPWD"
alias recent="ls -lAt | head"
alias r="screen -DRA"
alias e="$EDITOR"
alias mutt="TERM=xterm-256color mutt"
alias tmux="TERM=xterm-256color tmux"
alias sdate="date +%d.%m.%Y"
alias iddqd="sudo -s"
alias ssh="ssh -C -X"
alias fuck="sudo !!"
