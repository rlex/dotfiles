set signature ".signature"
set realname "Lex Rivera"
set hostname "x-demon.org"
set username "x-demon"
set editor_command "vim '+set tw=72' +%d '%s'"
set sorting_method 12
set custom_sort_order "Date,Date"
set custom_sort_by_threads 1
set scorefile ".slrnkill"
set sendmail_command "/usr/bin/msmtp -t"

set mail_editor_command "mutt -H '%s'"
set mail_editor_is_mua 1

set save_directory ".news"
set cc_followup 4

setkey article toggle_collapse_threads "-"
setkey article evaluate_cmd ":"
setkey article hide_article "h"
setkey article toggle_headers "H"

set header_status_line "[total: %t%?u? unread: %u?] Group: %n%-18g -- %L (%P)"
header_display_format 0 "%F%B%-5S [%20r]:%t%89s %-27g[%25d]"
visible_headers "From:,Subject:,Date:,Newsgroups:,Followup-To:,Reply-To:"

#if$TERM xterm-256color
color normal		"white"		"color233"
color headers		"color178"	"color233"
color thread_number	"color32"	"color233"
color date		"color22"	"color233"
color author		"color129"	"color233"
color subject		"color251"	"color233"
color article		"color7"	"color233"
color boldtext		"color255"	"color233"
color header_name	"color34"	"color233"
color quotes0		"color25"	"color233"
color quotes1		"color88"	"color233"
color signature		"color238"	"color233"
color group		"color251"	"color233"
color grouplens_display	"color251"	"color233"
color tilde		"color22"	"color233"
color selection		"default"	"color233"
color cursor		"green"		"color233"
color description	"default"	"color233"
color from_myself	"yellow"	"color233"
#elif$TERM xterm-color
color normal		"white"		"default"
color headers		"color15"	"default"
color thread_number	"blue"		"default"
color date		"green"		"default"
#endif
